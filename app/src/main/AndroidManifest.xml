<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nahinthecoder.notes">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icn"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icn"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Themes"></activity>
        <activity android:name=".WeclomeScreen" />
        <activity android:name=".Delete" />
        <activity android:name=".Search" />
        <activity android:name=".MyNotes" />
        <activity android:name=".AddNote" />
        <activity android:name=".Menus" />
        <activity android:name=".OTPActivity" />
        <activity android:name=".Home" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>