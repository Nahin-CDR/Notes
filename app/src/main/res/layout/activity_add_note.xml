                <!--
                Extra code
                -->

                <EditText
                    android:id="@+id/topic_id"
                    android:layout_width="match_parent"
                    android:layout_marginTop="0dp"
                    android:layout_height="40dp"
                    android:paddingLeft="25dp"
                    android:textSize="15sp"
                    android:maxLength="25"
                    android:fontFamily="sans-serif-light"
                    android:background="@drawable/addnotes_ui"
                    android:hint="My Topic"/>

                <!--Date insertion ends -->




                <EditText
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:paddingTop="5dp"
                    android:id="@+id/father_name_id"
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="80dp"
                    android:paddingLeft="25dp"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-light"
                    android:background="@drawable/addnotes_ui"
                    android:hint="Write note here"/>


                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_margin="20dp"
                        android:id="@+id/submit_button_id"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/note_effect"
                        android:text="Add"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-light"
                        android:textColor="#6C1818"
                        android:textAllCaps="false"
                        android:layout_gravity="center_horizontal"/>
