<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/note_effect"
    tools:context=".SearchOption">


    <TextView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Custom search"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20sp"
        android:fontFamily="sans-serif-light"
        />




    <ScrollView
        android:background="@drawable/note_effect"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">




            <LinearLayout
                android:id="@+id/searchByDateID"
                android:layout_margin="10dp"
                android:background="@drawable/note_effect"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="150dp">

                <pl.droidsonroids.gif.GifImageView
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/date_gif"
                    />

                <TextView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="sans-serif-light"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Search by date"
                    />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/searchByTopicID"
                android:layout_margin="10dp"
                android:background="@drawable/note_effect"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="150dp">

                <pl.droidsonroids.gif.GifImageView
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/topicsearch"
                    />

                <TextView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="sans-serif-light"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Search by topic"
                    />

            </LinearLayout>





        </LinearLayout>



    </ScrollView>



</LinearLayout>