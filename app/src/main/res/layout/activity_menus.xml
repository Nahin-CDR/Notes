<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Menus">

    <LinearLayout
        android:id="@+id/inputPasswordLinearLayoutID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:visibility="gone"
        android:background="@drawable/defult_button"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textAlignment="center"
                android:text="Hi"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:id="@+id/nameID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/alerts"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:textColor="@color/white"/>

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:src="@drawable/hello"
                />


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_margin="0dp"
            android:layout_height="match_parent">


            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_marginTop="5dp"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:src="@drawable/key"
                        />
                    <EditText
                        android:id="@+id/passwordID"
                        android:layout_width="250dp"
                        android:layout_height="35dp"
                        android:background="@drawable/defult_button"
                        android:textSize="15sp"
                        android:paddingLeft="10dp"
                        android:inputType="number"
                        android:maxLength="8"
                        android:hint="master password"
                        android:layout_marginRight="30dp"
                        android:fontFamily="sans-serif-light"
                        />
                </LinearLayout>

                <Button
                    android:id="@+id/loginID"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/effect"
                    android:enabled="true"
                    android:text="Go"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="15sp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/menusLayoutID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/defult_button"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Menu"
            android:fontFamily="sans-serif-light"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="20dp"
            />

        <!--
        <View
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:layout_height="1dp"
            android:background="@color/white"/>
-->



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@drawable/defult_button"
            android:orientation="vertical">



            <LinearLayout
                android:layout_marginTop="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/defult_button"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_margin="15dp"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/addNoteID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/addnote"
                        style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                        android:background="@drawable/effect"
                        android:padding="5dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Add note"
                        android:textSize="13sp"
                        android:layout_marginLeft="0dp"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/myNotesID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/folder"
                        style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                        android:background="@drawable/effect"
                        android:padding="5dp"
                        android:contentDescription="TODO" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="My notes"
                        android:textSize="13sp"
                        android:layout_marginLeft="0dp"
                        />
                </LinearLayout>


            </LinearLayout>



            <LinearLayout
               android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/defult_button"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_margin="15dp"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/searchID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/scrch"
                        style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                        android:background="@drawable/effect"
                        android:padding="5dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Search note"
                        android:textSize="13sp"
                        android:layout_marginLeft="0dp"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/deleteID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/delete"
                        style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                        android:background="@drawable/effect"
                        android:padding="5dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Delete note"
                        android:textSize="13sp"
                        android:layout_marginLeft="0dp"
                        />
                </LinearLayout>


            </LinearLayout>




        </LinearLayout>











    </LinearLayout>












</LinearLayout>